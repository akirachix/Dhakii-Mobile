<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MamaMindTrial"
        tools:targetApi="31">

        <!-- CareGuideActivity -->
        <activity
            android:name=".ui.CareGuideActivity"
            android:exported="true" />


        <!-- MainActivity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities -->
        <activity
            android:name=".ui.MainActivity2"
            android:exported="true" />

        <activity
            android:name=".NextSignUp"
            android:exported="true" />

        <activity
            android:name=".HomePage"
            android:exported="false" />

        <activity
            android:name=".ui.MamamindLogin"
            android:exported="true" />

        <activity
            android:name=".ui.Mamamind_teaser"
            android:exported="false" />

        <activity
            android:name=".ui.Mammind_M"
            android:exported="false" />


        <activity
            android:name=".ui.ArticleDetailActivity"
            android:exported="false" />

        <!-- Meta-data for preloaded fonts -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <!-- SignUp Activity -->
        <activity
            android:name=".SignUp"
            android:exported="false" />

    </application>

</manifest>
