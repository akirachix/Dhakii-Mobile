<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mamamindlogo"
        android:label="@string/MamaMind"
        android:roundIcon="@drawable/mamamindlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MamaMindTrial"
        tools:targetApi="31">

        <!-- Login Activity -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">

        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <!-- Care Guide Activity -->
        <activity
            android:name=".ui.CareGuideActivity"
            android:exported="true" />

        <!-- MainActivity2 -->
        <activity
            android:name=".ui.MainActivity2"
            android:exported="true" />

        <!-- Home Page -->
        <activity
            android:name=".HomePage"
            android:exported="false" />

        <!-- Mamamind Teaser -->
        <activity
            android:name=".ui.Mamamind_teaser"
            android:exported="false" />

        <!-- Mammind_M Activity -->
        <activity
            android:name=".ui.Mammind_M"
            android:exported="false" />

        <!-- Article Detail Activity -->
        <activity
            android:name=".ui.ArticleDetailActivity"
            android:exported="false" />

        <!-- SignUp Activity -->
        <activity
            android:name=".Successfull_submission"
            android:exported="false" />

        <!-- Questions Activity -->
        <activity
            android:name=".ui.Questions"
            android:exported="true" />

        <!-- Meta-data for preloaded fonts -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>
</manifest>
