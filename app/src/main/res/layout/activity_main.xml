  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mothersâ€™ Details"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/nunito"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black" />

    <!-- Tab layout for Due Visit, Missed Visit, Visited -->
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_marginTop="8dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/dueVisitTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito"
        android:padding="12dp"
        android:text="Due Visit"
        android:textColor="#02A6A6"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/missedVisitTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito"
        android:padding="12dp"
        android:text="Missed Visit"
        android:textColor="#FF000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/visitedTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito"
        android:padding="12dp"
    android:text="Visited"
    android:textColor="#FF000000"
    android:textSize="18sp" />
</LinearLayout>

<FrameLayout
android:id="@+id/fragmentContainer"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_below="@id/tabLayout"
android:layout_margin="16dp"
android:layout_marginTop="0dp"
    android:layout_marginBottom="16dp" />

      <ImageView
          android:id="@+id/btnBack"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_above="@+id/tabLayout"
          android:layout_alignParentEnd="true"
          android:layout_marginEnd="369dp"
          android:layout_marginBottom="-6dp"
          app:srcCompat="@drawable/ic_back_arrow" />

  </RelativeLayout>
